@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
}


<style>
    h1 {
        text-align: center;
    }

    .form-control {
        border: 3px solid #000;
        border-radius: 15px;
        background-color: transparent;
    }

    .content {
        background: url(/images/Background.png);
        background-size: 100% 100%;
        padding: 25px;
    }
</style>

<h1>@ViewData["Title"]</h1>

<div class="row justify-content-md-center content">
    <div class="col-md-6">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Yeni hesap oluştur.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.BloodType"></label>
                <input asp-for="Input.BloodType" class="form-control" />
                <span asp-validation-for="Input.BloodType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Birthday"></label>
                <input asp-for="Input.Birthday" class="form-control" />
                <span asp-validation-for="Input.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Hospital"></label>
                <input asp-for="Input.Hospital" class="form-control" />
                <span asp-validation-for="Input.Hospital" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Gender"></label>
                <input asp-for="Input.Gender" class="form-control" />
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.MemberType"></label>
                <input asp-for="Input.MemberType" class="form-control" />
                <span asp-validation-for="Input.MemberType" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-danger">Kayıt Ol</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
